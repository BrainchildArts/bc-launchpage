#!/usr/bin/env sh

# Run this script immediately after cloning the codebase.

# Squash all commits to get a clean slate
git update-ref -d refs/heads/master
git commit -am "New Proteus-Gulp project"

# Make sure npm is installed
if ! type npm > /dev/null; then
 echo "Installing npm..."
 curl -L https://npmjs.org/install.sh | sh
fi

# Set up npm dependencies
echo "Installing Dependencies..."
npm install

# Remove Git remote if it's still the proteus-middleman repo
if [ "$(git config --get remote.origin.url)" = "git@github.com:thoughtbot/proteus-gulp.git" ]; then
  echo "What is your repo url? Enter URL or leave blank"
  read url
  if [ -z "$url" ]; then
    git remote rm origin
    git remote add origin "$url"
  fi
fi
